@page
@model SocialMediaWebApp.Pages.PostModel
@{
}

<form method="post">
    <select asp-for="SelectedValue" asp-items="Model.Values" class="form-control selectpicker" data-live-search="true">
        <option value="">-- Select an item --</option>
    </select>
    <div class="mb-3">
        <label asp-for="PostData.Title" class="form-label"></label>
        <input asp-for="PostData.Title" class="form-control">
        <span asp-validation-for="PostData.Title"></span>
    </div>
    <div class="mb-3" >
        <label asp-for="PostData.Body" class="form-label"></label>
        <textarea asp-for="PostData.Body" class="form-control" rows="3"></textarea>
        <span asp-validation-for="PostData.Body"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

