@page
@model SocialMediaWebApp.Pages.EditProfileModel
@{
}



<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="EditProfileVM.ProfilePic" class="form-label"></label>
        <input asp-for="EditProfileVM.ProfilePic" type="file" accept="image/*" />
    </div>

    <div class="mb-3">
        <label asp-for="EditProfileVM.Bio" class="form-label"></label>
        <input asp-for="EditProfileVM.Bio" />
    </div>


    <div class="mb-3">
        <label asp-for="EditProfileVM.Gender" class="form-label"></label>
        <input asp-for="EditProfileVM.Gender"/>
    </div>

    <div class="mb-3">
        <label asp-for="EditProfileVM.Location" class="form-label"></label>
        <input asp-for="EditProfileVM.Location" />
    </div>

  

    <button type="submit" class="btn btn-primary">Save</button>
</form>